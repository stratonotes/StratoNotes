<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark App Theme -->
    <style name="Theme.PunchPad2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- All colors are runtime-controlled -->
    </style>

    <!-- Dark Splash Theme (Same layout-based control) -->
    <style name="Theme.PunchPad2.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="postSplashScreenTheme">@style/Theme.PunchPad2</item>
    </style>

</resources>
