<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_note_bg"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:elevation="3dp"
    android:padding="12dp">

    <CheckBox
        android:id="@+id/noteCheckbox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:visibility="gone"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false" />

    <EditText
        android:id="@+id/noteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/noteCheckbox"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:textSize="16sp"
        android:lineSpacingExtra="6dp"
        android:inputType="textMultiLine"
        android:minLines="1"
        android:maxLines="6"
        android:padding="4dp" />

    <ImageView
        android:id="@+id/starIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_star_outline"
        android:contentDescription="Favorite Star" />

    <LinearLayout
        android:id="@+id/mediaContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/noteText"
        android:layout_marginTop="8dp" />

    <!-- Fade must appear last so it's drawn on top -->
    <View
        android:id="@+id/noteFade"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignBottom="@id/noteText"
        android:layout_alignStart="@id/noteText"
        android:layout_alignEnd="@id/noteText"
        android:background="@android:color/transparent" />



</RelativeLayout>
