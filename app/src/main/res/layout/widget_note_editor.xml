<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- rounded textbox -->
    <EditText
        android:id="@+id/noteInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120dp"
        android:hint="Start typingâ€¦"
        android:padding="16dp"
        android:maxLines="10" />

    <!-- undo / redo / plus (floating inside bottom-right corner) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_gravity="bottom|end"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/fabUndo"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_undo"
        android:background="@android:color/transparent"
        android:contentDescription="@string/desc_undo" />

    <ImageButton
        android:id="@+id/fabRedo"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_redo"
        android:background="@android:color/transparent"
        android:contentDescription="@string/desc_redo" />

    <ImageButton
        android:id="@+id/fabPlus"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_add"
        android:background="@android:color/transparent"
        android:contentDescription="Add media" />

</FrameLayout>
