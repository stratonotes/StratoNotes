<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/colorPickerOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF00FF"
    android:visibility="visible"

    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/colorPickerBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_box"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/colorPreviewPager"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp" />

        <View
            android:id="@+id/colorPreview"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF" />

        <SeekBar android:id="@+id/seekRed" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <SeekBar android:id="@+id/seekGreen" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <SeekBar android:id="@+id/seekBlue" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button android:id="@+id/resetColorButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Reset"/>
            <Button android:id="@+id/cancelButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cancel"/>
            <Button android:id="@+id/saveColorButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Save"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/closeColorPicker"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close"
            android:contentDescription="Close" />
    </LinearLayout>
</FrameLayout>
