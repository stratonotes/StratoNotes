<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filterGrid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    android:padding="12dp"
    android:elevation="4dp">

    <ImageButton
        android:id="@+id/filterSearch"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_search"
        android:background="@android:color/transparent"
        android:contentDescription="Search" />

    <ImageButton
        android:id="@+id/filterFavorites"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_star_outline"
        android:background="@android:color/transparent"
        android:contentDescription="Favorites" />

    <ImageButton
        android:id="@+id/filterNewest"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_sort"
        android:background="@android:color/transparent"
        android:contentDescription="Sort Newest" />

    <ImageButton
        android:id="@+id/filterOldest"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_sort"
        android:background="@android:color/transparent"
        android:contentDescription="Sort Oldest" />

</GridLayout>
