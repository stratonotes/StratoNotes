<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA000000"
    android:padding="32dp">

    <LinearLayout
        android:id="@+id/dialogContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:clipToPadding="false">

        <!-- Moved slightly down -->
        <com.stratonotes.ColorWheelView

            android:id="@+id/colorWheelView"
            android:layout_width="375dp"
            android:layout_height="375dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center" />

        <!-- Moved slightly up -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-300dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnTextColor"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="TEXT COLOR"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnAppColor"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="APP COLOR"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnBackgroundImage"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="BACKGROUND IMAGE"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Narrower Reset button -->
        <Button
            android:id="@+id/btnReset"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:backgroundTint="#D06030"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:textStyle="bold" />

        <!-- Bottom bar further down -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="48dp">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SAVE"
                android:textStyle="bold"
                android:backgroundTint="#3333AA"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CANCEL"
                android:textStyle="bold"
                android:backgroundTint="#D06030"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
