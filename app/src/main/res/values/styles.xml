<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base App Theme -->
    <style name="Theme.PunchPad2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your base theme here if needed -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <!-- Splash Theme -->

    <style name="Theme.PunchPad2.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/punchpad2_splash</item>
        <item name="android:windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.PunchPad2</item>
    </style>

</resources>
