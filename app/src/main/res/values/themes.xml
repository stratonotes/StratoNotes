<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base App Theme -->
    <style name="Theme.PunchPad2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- All colors are runtime-controlled -->
    </style>

    <!-- Splash Theme (Now fully controlled by activity_splash.xml) -->
    <style name="Theme.PunchPad2.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="postSplashScreenTheme">@style/Theme.PunchPad2</item>
    </style>

</resources>
