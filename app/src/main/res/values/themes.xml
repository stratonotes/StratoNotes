<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base App Theme -->
    <style name="Theme.PunchPad2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Let ActionMode float above content -->
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- Splash Theme (layout-based control only) -->
    <style name="Theme.PunchPad2.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="postSplashScreenTheme">@style/Theme.PunchPad2</item>
    </style>

</resources>
